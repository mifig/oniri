<div class="grad-blue-bg" style="position:relative; height: 100vh">
  <%= link_to "sign-up", new_user_registration_path, class: "white-link-btn bottom-ontop-abs" %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container vertical-center">
      <h2 class="title-center mb-5">log in</h2>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      wrapper_html: { class: "input-div" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      wrapper_html: { class: "input-div" }  %>
          <%= f.input :remember_me, 
                      class: "",
                      as: :boolean if devise_mapping.rememberable? %>
        </div>
      <%= render "devise/shared/links" %>
    </div>
    <div class="form-actions text-align-center">
      <%= f.button :submit, "log-in", class: "login-btn box-white-shadow bottom-pos" %>
    </div>
  <% end %>
</div>
