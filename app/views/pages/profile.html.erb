<div class="container grad-blue-bg">
  <div class="top-fixed no-box-shadow" style="width: 100%; background: white">
    <h1 class="title-center m-0 blue">my profile</h2>
  </div>
  <div style="padding-top: 160px">
    <i class="avatar-profile fas fa-brain"></i>
    <p class="text-align-center m-0"><%= @user.first_name %> <%= @user.last_name %></p>
    <p class="text-align-center m-0" style="color: gray;font-size: 12px"><%= @user.email %></p>
    <div class="d-flex justify-content-center">
      <%= link_to "edit profile >", edit_user_registration_path, class: "white-btn my-3 blue-shadow" %>
    </div>

    <div class="mt-3">
      <p class="profile-separator">content</p>
      <div class="mb-2 py-2 px-3 profile-tabs">
        <%= link_to dreams_path do %>
          <div class="d-flex justify-content-between align-items-center">
            <p class="m-0 link-profiles"><i class="fas fa-home"></i> dreams</p>
            <p class="m-0" style="font-size: 18px">></p>
          </div>
        <% end %>
        <%= link_to labels_path do %>
          <div class="d-flex justify-content-between align-items-center">
            <p class="m-0 link-profiles"><i class="fas fa-tags"></i> labels</p>
            <p class="m-0" style="font-size: 18px">></p>
          </div>
        <% end %>
      </div>

      <p class="profile-separator">profile</p>
      <div class="mb-2 py-2 px-3 profile-tabs">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <div class="d-flex justify-content-between align-items-center">
            <p class="m-0 link-profiles"><i class="fas fa-power-off"></i> sign out</p>
            <p class="m-0" style="font-size: 18px">></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-4 text-align-center">
      <%= link_to export_path(format: :csv), class: "white-font export-btn" do %>
        export dreams <i class="fas fa-cloud-download-alt"></i>
      <% end %>
    </div>
  </div>
</div>